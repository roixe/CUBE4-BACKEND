<UserControl x:Class="JamaisASec.Views.UserControls.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:JamaisASec"
             mc:Ignorable="d" d:DesignWidth="191.33" Height="64">
    <Grid>
        <Border Grid.Row="2" HorizontalAlignment="Right" BorderBrush="{StaticResource LightGray}" BorderThickness="1"
                CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource pagingButton}">
                    <iconPacks:PackIconBootstrapIcons Kind="ChevronLeft" Width="20" Height="20"/>
                </Button>
                <Rectangle Width="1" Fill="{StaticResource LightGray}" Margin="3 7"/>
                <Button Style="{StaticResource pagingButton}" Content="1" Background="{StaticResource Burgundy}" Foreground="White"/>
                <Button Style="{StaticResource pagingButton}" Content="2"/>
                <Rectangle Width="1" Fill="{StaticResource LightGray}" Margin="3 7" />
                <Button Style="{StaticResource pagingButton}">
                    <iconPacks:PackIconBootstrapIcons Kind="ChevronRight" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
