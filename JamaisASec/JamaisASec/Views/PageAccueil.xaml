<Page x:Class="JamaisASec.Views.PageAccueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:JamaisASec.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashBoard">

    <Page.DataContext>
        <vm:PageAccueilViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Tableau des produits et quantités en stock -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="10">
            <TextBlock Text="Stock actuel" FontWeight="Bold" Margin="5" TextAlignment="Center"/>
            <DataGrid Name="ArticlesGrid" 
                      Style="{StaticResource DataGridStyle1}" 
                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}" 
                      ItemsSource="{Binding Articles}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Article" IsReadOnly="True" CanUserResize="False" Width="3*" Binding="{Binding nom}"/>
                    <DataGridTextColumn Header="Stock" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding quantite}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Tableau des 10 dernières commandes clients -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <TextBlock Text="Commandes en cours" FontWeight="Bold" Margin="5" TextAlignment="Center"/>
            <DataGrid Name="commandes" 
                      Style="{StaticResource DataGridStyle1}" 
                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}" 
                      ItemsSource="{Binding Commandes}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Client" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Client}"/>
                    <DataGridTextColumn Header="Date" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Date}"/>
                    <DataGridTextColumn Header="Montant" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Montant}"/>
                    <DataGridTextColumn Header="Nombre articles" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding TotalArticle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Tableau des 10 dernières commandes fournisseurs -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Achats en attente" FontWeight="Bold" Margin="5" TextAlignment="Center"/>
            <DataGrid Name="achats" 
                      Style="{StaticResource DataGridStyle1}" 
                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}" 
                      ItemsSource="{Binding Achats}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Fournisseur" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Fournisseur}"/>
                    <DataGridTextColumn Header="Date" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Date}"/>
                    <DataGridTextColumn Header="Montant" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding MontantFormate}"/>
                    <DataGridTextColumn Header="Nombre articles" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding TotalArticle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
