<Page x:Class="JamaisASec.Views.Pages.PageAchats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:JamaisASec.ViewModels.Pages"
      xmlns:uc="clr-namespace:JamaisASec.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAchats">

    <Page.DataContext>
        <vm:PageAchatsViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:SearchBox Grid.Row="0" 
                      Width="300" 
                      HorizontalAlignment="Left"
                      Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Table des achats -->
        <DataGrid Style="{StaticResource DataGridStyle1}" 
                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                  Grid.Row="1" 
                  Name="AchatsGrid"
                  ItemsSource="{Binding Achats}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn CanUserResize="False" Width="auto" ElementStyle="{StaticResource CheckBoxStyle1}" Binding="{Binding IsSelected}">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding DataContext.IsHeaderCheckBoxChecked, RelativeSource={RelativeSource AncestorType=Page}}" Style="{StaticResource CheckBoxStyle1}" />
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Référence" IsReadOnly="True" CanUserResize="False" Width="Auto" Binding="{Binding reference}"/>
                <DataGridTextColumn Header="Date" IsReadOnly="True" CanUserResize="False" Width="Auto" Binding="{Binding date, StringFormat={}{0:dd/MM/yyyy}}"/>
                <DataGridTextColumn Header="Fournisseur" IsReadOnly="True" CanUserResize="False" Width="Auto" Binding="{Binding fournisseur.nom}"/>
                <!--<DataGridTextColumn Header="Montant" IsReadOnly="True" CanUserResize="False" Width="Auto" Binding="{Binding Montant, StringFormat=N2}"/>-->
                <DataGridTemplateColumn Header="Statut" IsReadOnly="True" CanUserResize="False" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding status, Converter={StaticResource StatusToColorConverter}}" 
                                    CornerRadius="5" 
                                    Padding="5" 
                                    Margin="2"
                                    Width="120"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="{Binding status}" 
                                           Foreground="White"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
