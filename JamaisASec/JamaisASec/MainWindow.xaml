<Window x:Class="JamaisASec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="ERP">



    <!-- Conteneur principal -->
    <Grid Margin="10">

        <!-- Barre de navigation en haut -->
        <Border Background="MediumVioletRed" Height="50" VerticalAlignment="Top" CornerRadius="5,5,5,5">
            <DockPanel LastChildFill="False" HorizontalAlignment="Stretch">

                <!-- Titre ERP aligné à gauche -->
                <TextBlock Text="ERP" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="10,0" DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                    <Button Content="Accueil" Click="AccueilButton_Click" Width="100" Margin="5"/>
                    <Button Content="Produits et Familles" Click="ProduitsButton_Click" Width="119" Margin="5"/>
                    <Button Content="Fournisseurs" Click="fournisseursButton_Click" Width="100" Margin="5"/>
                    <Button Content="Stocks" Click="StocksButton_Click" Width="100" Margin="5"/>
                    <Button Content="Commandes" Width="100" Margin="5"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10,60,10,10"/>
    </Grid>

</Window>

