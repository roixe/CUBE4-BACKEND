<Window x:Class="JamaisASec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ERP" Height="600" Width="900">

    <!-- Conteneur principal -->
    <Grid Margin="10">

        <!-- Barre de navigation en haut -->
        <DockPanel LastChildFill="False" Background="LightGray" Height="50" VerticalAlignment="Top">
            <TextBlock Text="ERP" FontWeight="Bold" FontSize="16" Margin="10,0" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            <Button Content="Accueil" Click="AccueilButton_Click" Margin="10,0" Width="75" />
            <Button Content="Produits" Click="ProduitsButton_Click" Margin="10,0" Width="75"/>
            <Button Content="Fournisseurs" Click="fournisseursButton_Click" Margin="10,0" Width="75"/>
            <Button Content="Familles" Margin="10,0" Width="75"/>
            <Button Content="Stocks" Click="StocksButton_Click" Margin="10,0" Width="75"/>
            <Button Content="Commandes" Margin="10,0" Width="75"/>
        </DockPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10,60,10,10"/>
    </Grid>
    </Window>

